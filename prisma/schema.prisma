generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(uuid())
  name           String
  email          String         @unique
  password       String
  productEntries ProductEntry[]
}

model Product {
  id             String         @id @default(uuid())
  url            String
  title          String
  images         String[]
  saleEndDate    DateTime
  productEntries ProductEntry[]

  @@unique([url, saleEndDate])
}

model ProductEntry {
  id           String      @id @default(uuid())
  productType  ProductType
  /// [StorageState]
  storageState Json?
  authSecret   String?
  products     Product[]
  userId       String
  user         User?       @relation(fields: [userId], references: [id])

  @@unique([userId, productType])
}

enum ProductType {
  Itch
  Unity
  Unreal
}
